{
    "name": "sebastiaanluca/laravel-helpers",
    "type": "library",
    "description": "An extensive set of Laravel-specific helpers.",
    "keywords": [
        "laravel",
        "helper",
        "blade",
        "collection",
        "response",
        "array",
        "form",
        "pipe"
    ],
    "homepage": "https://github.com/sebastiaanluca/laravel-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Luca",
            "email": "hello@sebastiaanluca.com",
            "homepage": "https://www.sebastiaanluca.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7",
        "laravel/framework": "^5.1"
    },
    "require-dev": {
        "orchestra/testbench": "^3.1",
        "phpunit/phpunit": "~4.0|~5.0|~6.0",
        "kint-php/kint": "^2.1"
    },
    "suggest": {
        "laravelista/ekko": "Required for `is_active_route` helper function.",
        "kint-php/kint": "A powerful and modern PHP debugging tool. Required for the debug helpers.",
        "laravelcollective/html": "HTML and Form Builders for the Laravel Framework. Required for the Form helpers."
    },
    "autoload": {
        "psr-4": {
            "SebastiaanLuca\\Helpers\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SebastiaanLuca\\Helpers\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    }
}
