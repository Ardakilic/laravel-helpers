{
    "name": "sebastiaanluca/laravel-helpers",
    "type": "library",
    "description": "A set of Laravel-specific helpers..",
    "keywords": [
        "Laravel",
        "helpers",
        "blade",
        "collection",
        "form",
        "pipe"
    ],
    "homepage": "https://github.com/sebastiaanluca/laravel-helpers",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastiaan Luca",
            "email": "hello@sebastiaanluca.com",
            "homepage": "http://www.sebastiaanluca.com",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^7.0",
        "laravel/framework": "5.1.*|5.2.*|5.3.*"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0|~5.0"
    },
    "suggest": {
        "laravelista/ekko": "Required for `isActiveRoute` helper function.",
        "raveren/kint": "A powerful and modern PHP debugging tool. Required for the global `ddd` helper function."
    },
    "autoload": {
        "psr-4": {
            "SebastiaanLuca\\Helpers\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-develop": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    }
}
